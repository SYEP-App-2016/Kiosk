              <%}%>
              </a>
            </div>
            <div class="col-sm-6">
                  <a href="/book/details/<%=list[i].id%>">
                  <h1><%= list[i].title %></h1>
                  <h5><%= list[i].author %></h5>
                  </a>
              </div>

      </div>
    </div>

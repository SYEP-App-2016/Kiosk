<% include ../header.ejs %>


<div class="">
    <h1>Edit: <%= title %></h1>

<form method="POST" action="/Book/Edit">

    <div class="row">
        <div>--- <%= id %> ---</div>

        <input type="hidden" class="form-control" name="id"  value="<%= id %>" />

        <div class="form-group">
            <label for="exampleInputTitle">Title:</label>
            <input name="title" type="text" class="form-control" placeholder="Title" value ="<%=title%>">
        </div>

        <div class="form-group">
            <label for="exampleInputAuthor">Author:</label>
            <input name="author" type="text" class="form-control" placeholder="Author" value ="<%=author%>">
        </div>

        <div class="form-group">
            <label for="exampleInputAuthor">Thumbnail:</label>
            <input name="img" type="text" class="form-control" placeholder="Image URL" value ="<%=img%>">
        </div>

        <div class="form-group">
            <label for="exampleInputAuthor">Small Thumbnail:</label>
            <input name="sImg" type="text" class="form-control" placeholder="Image URL" value ="<%=sImg%>">
        </div>

        <div class="form-group">
            <label for="exampleInputSummary">Summary:</label>
            <textarea name="summary" type="text" class="form-control" placeholder="Summary"><%= summary %></textarea>
        </div>

    </div>

    <div class="row">

        <!-- DYNAMIC BEGINS -->
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <p> '<%=genre%>' - </p>
        </div>
        <!-- DYNAMIC ENDS -->


        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label for="copiesAvailable">Number of Copies</label>
            <input name="copiesAvailable" type="number" class="form-control" placeholder="##" value="<%= copiesAvailable %>" />
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label for="exampleInputSummary">Cover Type:</label>
            <select name ="coverType" class="form-control"></select>
        </div>

    </div><!-- ROW ENDS -->

    <!-- UI ISSUE???? -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <div class="form-group">
                <label for="exampleInputSummary">Publisher:</label>
                <input name="publisher" type="text" class="form-control" placeholder="Publisher" value="<%= publisher %>">
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label for="pageCount">How many Pages</label>
            <input name="pageCount" type="number" class="form-control" placeholder="##" value="<%= pageCount %>" />
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label for="ratings">Ratings</label>
            <input name="ratings" type="number" class="form-control" placeholder="##" value="<%= ratings %>" />
        </div>
    </div>

    <div>
        <div class="pull-right">
            <button class="btn btn-default btn-danger">Cancel</button>
            <input class="btn btn-default btn-warning" type="submit" value="Update">
        </div>
    </div>

</form>

</div>


<% include ../footer.ejs %>
